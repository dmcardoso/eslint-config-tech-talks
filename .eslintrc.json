{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "ignorePatterns": "build",
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "error",
    "no-new": "off",
    "prefer-promise-reject-errors": "error"
  }
}
